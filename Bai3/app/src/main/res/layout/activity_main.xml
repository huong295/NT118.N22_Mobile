<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/purple_200"
        android:text="BAI 3: QUAN LY NHAN VIEN" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="MA NV:" />

        <EditText
            android:id="@+id/et_ma_nv"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"

            android:hint="@string/nhap_ma"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="19dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:text="Ten NV: " />

        <EditText
            android:id="@+id/et_ten_nv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"

            android:hint="@string/nhap_ten"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="333dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:text="Loai NV: " />

        <RadioGroup
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rg_loai_nv"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_chinhthuc"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:text="NV Chinh thuc" />

            <RadioButton
                android:id="@+id/rd_thoivu"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:text="NV Thoi Vu" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btn_nhap"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="Nhap" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:text="" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lv_nv"
        android:layout_height="match_parent" />


</LinearLayout>